<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="chat-header">
        <div class="row justify-content-around">
          <div>
            <h4><%= link_to matches_path, class: "voltar" do  %>
              <i class="fas fa-chevron-left"></i>
            <% end %>
              </h4>
          </div>
          <div>
            <h4><%= link_to @match.other_user(current_user).username.downcase.capitalize, user_path(@match.other_user(current_user).id), class: "name" %></h4>
          </div>
          <div>
            <% if @match.other_user(current_user).avatar.attached? %>
              <h4> <%= cl_image_tag @match.other_user(current_user).avatar.key, height: 200, width: 200, crop: :thumb, gravity: :face %></h4>
            <% else %>
              <h4> <%= cl_image_tag "https://res.cloudinary.com/dgeodyyf7/image/upload/v1583239038/astroloja-01_mwidxw.jpg", crop: :fill, class: "avatar" %></h4>
            <% end %>
          </div>
        </div>
      </div>
      <div class="messages">
        <% @match.messages.each do |message| %>
        <%= render "messages/message", message: message, user_is_messages_author: message.from?(current_user) %>
        <% end %>
      </div>
        <div class="row">
          <div id="creat-message">
            <%= simple_form_for [@match, Message.new], class: 'row', remote: true do |f| %>
            <%= f.input :content, label: false, class: "col-sm-10" %>
            <%= f.submit label: ">", class: 'col-sm-2'%>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>

<% content_for :after_js do %>
  <script>
    scrollLastMessageIntoView();
    App['chat_room_<%= @match.id %>'] = App.cable.subscriptions.create(
      { channel: 'ChatRoomsChannel', chat_room_id: <%= @match.id %> },
      {
        received: (data) => {
          if (data.current_user_id !== <%= current_user.id %>) {
            const messagesContainer = document.querySelector('.messages');
            messagesContainer.insertAdjacentHTML('beforeend', data.message_partial);
            document.getElementById('message_content').value = "";
            scrollLastMessageIntoView();
          }
        }
      }
    )
  </script>
<% end %>


