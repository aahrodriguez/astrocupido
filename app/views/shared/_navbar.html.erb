<div class="phone-frame">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <% if params[:controller] == 'users' && params[:action] == 'index' %>
      <%= link_to all_users_path, class: "navbar-brand" do %>
        <%= image_tag "https://res.cloudinary.com/dgeodyyf7/image/upload/v1584295772/Astromatch_Elementos-18_txsezp.png" %>
      <% end %>
    <% else %>
      <h4>
        <%= link_to :back do  %>
          <%= image_tag('icons-02.png', size: "28x28") %>
        <% end %>
      </h4>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <nav class="my-2 my-md-0 mr-md-3">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <%= link_to "Browse", all_users_path, class: "text-white mr-3" %>
              </li>
              <li class="nav-item active">
                <%= link_to "Messages", matches_path, class: "text-white mr-3" %>
              </li>
              <li class="nav-item active">
                <%= link_to "My Profile", my_profile_path, class: "text-white mr-3" %>
              </li>
              <li class="nav-item active">
                <%= link_to "Configuration", edit_user_path(current_user), class: "text-white mr-3" %>
              </li>
              <li class="nav-item active">
                <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "text-white mr-3" %>
              </li>
            </ul>
          </nav>
        <% else %>
          <%= link_to "Sign in", all_users_path, class: "btn btn-secondary mr-3" %>
          <%= link_to "Sign up", all_users_path, class: "btn btn-outline-primary" %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
