<div class="mobile-container">
  <div class="margin-container">
    <div class="profile-user-container">
      <h5 class="match-percent">
        70%
      </h5>
        <div class="profile-photo">
          <%= link_to all_users_path do %>

          <% if @user.avatar.attached? %>
              <h4> <%= cl_image_tag @user.avatar.key, height: 200, width: 200, crop: :thumb, gravity: :face %></h4>
            <% else %>
              <h4> <%= cl_image_tag "https://res.cloudinary.com/dgeodyyf7/image/upload/v1583239038/astroloja-01_mwidxw.jpg", crop: :fill, class: "avatar" %></h4>
            <% end %>
            <%#= cl_image_tag @user.avatar.key, height: 200, width: 200, crop: :thumb, gravity: :face %>
          <% end %>
        </div>
        <p class="profile-name"><%= @user.username %></p>
        <p><%= @user.description %></p>
        <p><%= @user.astrology_chart.birth_city %></p>
        <p><%= @user.astrology_chart.birthdate %></p>
        <div class="like-buttons">
          <div class="deslike">
            <%= link_to interactions_path(like: false, receiver: @user.id), method: :post do %>
              <i class="fas fa-times fas-4x"></i>
            <% end %>
          </div>
          <div class="like">
            <%= link_to interactions_path(like: true, receiver: @user.id), method: :post do %>
              <i class="far fa-heart fas-4x"></i>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>


