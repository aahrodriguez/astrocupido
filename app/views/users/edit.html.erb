<div class="edit-config-container">
    <h4>Editar Configurações</h4>
    <%= simple_form_for(@user, as: @user, url: edit_my_user_path, html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <%= f.input :username %>

        <%= f.input :current_address,
                    hint: "change your current address here",
                    required: false,
                    input_html: { autocomplete: "current address" } %>

        <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>


      <%= f.button :submit, "Update", class:"btn profile-btn col-sm-4 mt-1" %>
    <% end %>
</div>
