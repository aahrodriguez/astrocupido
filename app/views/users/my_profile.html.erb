
    <div class="my-user-profile-container">
        <div class="profile-photo">
          <% if @user.avatar.attached? %>
            <%= link_to my_profile_path do %>
              <%= cl_image_tag @user.avatar.key, crop: :thumb, gravity: :face %>
            <% end %>
          <% elsif @user.gender == "male" %>
            <%= link_to my_profile_path do %>
              <img src="https://res.cloudinary.com/depkgd9tg/image/upload/v1583866471/rqujcnufwkhrrkmdgkku.png" alt="<% @user.id %>">
            <% end %>
          <% else %>
            <%= link_to my_profile_path do %>
              <img src="https://res.cloudinary.com/dgeodyyf7/image/upload/v1584325494/Astromatch_Elementos-20_njbszk.png" alt="<% @user.id %>">
            <% end %>
          <% end %>
        </div>
        <h2 class="profile-name"><%= @user.username.capitalize %></h2>
        <h3><%= distance_of_time_in_words(DateTime.now, @user.astrology_chart.birthdate)%></h3>
        <p><%= @user.description %></p>
        <p>(<%= @user.gender.capitalize %>)</p>
        <div class="profile-buttons">
          <div class="row">
            <%= link_to "Preferencias", edit_my_preferences_path(current_user), class:"profile-btn btn col-sm-4" %>
            <%= link_to "Configurar Dados", edit_user_path(current_user), class:"profile-btn btn col-sm-4" %>
            <%= link_to "Recalcular Mapa", edit_astrology_chart_path(current_user), class:"profile-btn btn col-sm-4" %>
          </div>
        </div>
    </div>


